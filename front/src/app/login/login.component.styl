.container
  display: flex
  width: 100%
  height: 100%
  justify-content: center;
  align-items: center;
  background: linear-gradient(to bottom right, #d2b2f6, #9a4ef1);
  form
    width: 300px
    padding: 10px
    border: 0.16em solid #fff
    border-radius: 10px
    h1
      margin-bottom: 15px
    div
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px
      label
        text-transform: uppercase;
        color: #fff
      input
          border: 1px solid #fff
          border-radius: 10px
          padding: 5px
